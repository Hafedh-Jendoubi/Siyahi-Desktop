<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.EditReclamationController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10" padding="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Modifier Réclamation" style="-fx-font-size: 20px;"/>

        <ComboBox fx:id="reclamationComboBox" promptText="Sélectionnez une réclamation"/>

        <TextField fx:id="descriptionField" promptText="Description"/>
        <TextField fx:id="auteurField" promptText="Auteur"/>
        <TextField fx:id="emailField" promptText="Email"/>

        <Button text="Enregistrer" onAction="#modifierReclamation"/>

    </VBox>
</AnchorPane>
